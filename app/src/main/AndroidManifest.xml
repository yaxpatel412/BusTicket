<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.brs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bus"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bus"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.project.BusReservationSystem.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">


        </activity>
        <activity
            android:name="com.project.BusReservationSystem.BookTicketActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.project.BusReservationSystem.Register"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.project.BusReservationSystem.Login" />
        <activity
            android:name="com.project.BusReservationSystem.CancelTicketActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.project.BusReservationSystem.RetrieveTicketActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.project.BusReservationSystem.ShowRoutesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.project.BusReservationSystem.TicketActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.project.BusReservationSystem.BusLayout"
            android:theme="@style/AppTheme.NoActionBar" />

